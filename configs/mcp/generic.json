{
  "_comment": "Generic MCP server template for stdio-based clients.",
  "_usage": "Replace ${CRUXE_WORKSPACE} with an absolute path.",
  "mcp_server": {
    "name": "cruxe",
    "transport": "stdio",
    "command": "cruxe",
    "args": [
      "serve-mcp",
      "--workspace",
      "${CRUXE_WORKSPACE}"
    ],
    "env": {
      "RUST_LOG": "error",
      "CRUXE_CONFIG": "${CRUXE_CONFIG}"
    }
  }
}
