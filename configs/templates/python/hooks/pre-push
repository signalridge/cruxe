#!/usr/bin/env bash
set -u

log_dir="${HOME}/.cruxe/logs"
log_file="${log_dir}/hook.log"
mkdir -p "$log_dir"

workspace="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"

{
  echo "[$(date -u +"%Y-%m-%dT%H:%M:%SZ")] pre-push: workspace=${workspace}"

  if ! command -v cruxe >/dev/null 2>&1; then
    echo "cruxe not found on PATH; skipping doctor"
    exit 0
  fi

  if cruxe doctor --path "$workspace"; then
    echo "cruxe doctor completed"
  else
    echo "cruxe doctor failed (non-blocking)"
  fi
} >>"$log_file" 2>&1

exit 0
